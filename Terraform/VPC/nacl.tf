resource "aws_network_acl" "nacl" {
  vpc_id     = aws_vpc.vpc.id
  subnet_ids = aws_subnet.subnet_public.*.id

  tags = merge(local.resource_tags, map("Name", "nacl${local.tf_naming_conv}"))
}

resource "aws_network_acl_rule" "acl_in_ssh" {
  network_acl_id = aws_network_acl.nacl.id
  rule_number    = 100
  egress         = false
  protocol       = "tcp"
  rule_action    = "allow"
  cidr_block     = "0.0.0.0/0"
  from_port      = 22
  to_port        = 22
}

